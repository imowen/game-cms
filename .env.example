# Game CMS Environment Configuration

# 应用配置
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# 数据库配置
DATABASE_URL=./data/games.db

# 认证配置
# 管理员登录密码 - 请修改为您的安全密码
ADMIN_PASSWORD=your_secure_password_here

# 文件上传配置
# UPLOAD_DIR=./public/uploads
# MAX_FILE_SIZE=10485760  # 10MB

# API保护配置
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=60000  # 频率限制窗口(毫秒)
API_MAX_REQUESTS_PER_WINDOW=20  # 每个窗口最大请求数
API_BLOCK_DURATION=600000  # 封禁时长(毫秒)
API_INTERNAL_ONLY=true  # 是否仅限内部访问(严格模式)
API_REQUIRE_REFERER=true  # 是否要求referer检查
API_REQUIRE_BROWSER=true  # 是否要求浏览器访问

# 邮件配置 (可选)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# 分析配置 (可选)
# Google Analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Umami Analytics
# NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-umami-website-id
# NEXT_PUBLIC_UMAMI_URL=https://your-umami-instance.com

# 缓存配置
# REDIS_URL=redis://localhost:6379